<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context="com.klabs.projectstove.RegisterActivity">
        <TextView
            android:layout_width="wrap_content"
            android:text="Register"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:text="User type:"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:text="Instructor"
                android:id="@+id/login_register_instructor"
                android:padding="4dp"
                android:onClick="onRadioButtonClicked"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_width="wrap_content"
                android:padding="4dp"
                android:onClick="onRadioButtonClicked"
                android:id="@+id/login_register_student"
                android:text="Student"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:id="@+id/login_register_name"
            android:hint="Enter Name Here"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:id="@+id/login_register_phone"
            android:hint="Enter Phone Number"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_gravity="bottom"
            android:id="@+id/login_register_register"
            android:text="Register"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>

